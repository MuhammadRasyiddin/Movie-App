<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shape_roundRect_bottomLeftRadius="@dimen/size_8dp"
        app:shape_roundRect_bottomRightRadius="@dimen/size_8dp"
        app:shape_roundRect_topLeftRadius="@dimen/size_8dp"
        app:shape_roundRect_topRightRadius="@dimen/size_8dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/size_48dp"
            android:layout_height="@dimen/size_48dp"
            android:background="@color/colorPrimarySoft"
            android:contentDescription="@string/content_description"
            android:padding="@dimen/size_8dp" />
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp"
        tools:text="@string/app_name"
        android:lines="1"
        android:ellipsize="end"/>

</LinearLayout>